<% current_user.client.invoices.each do |invoice| %>
  <%= link_to client_invoice_path(invoice) do %>
    <div class="invoice-wrapper" id="<%= invoice.id %>">
     <div class="row">
      <div class="col-xs-1 col-md-1"> <%= check_box('invoice', 'validated')  %> </div>
      <div class="col-xs-6 col-md-2"> <%= invoice.freelancer.first_name %> <%= invoice.freelancer.last_name %> </div>
      <div class="col-xs-5 col-md-2"> Website freelance</div>
      <div class="col-xs-offset-1 col-xs-3 col-md-1 col-sm-offset-0"> <p><%= invoice.descriptions.first.price_cents / 100 %></p></div>
      <div class="col-xs-3 col-md-1"> <i> <p><%= invoice.current_state %></p> </i></div>
      <div class="col-xs-5 col-md-3"><%= invoice.due_date %></div>
        <div class="col-xs-offset-7 col-xs-6 col-md-2 col-sm-offset-0">
          <ul class="icons-inline">
           <!--    <li>

                 <i class="fa fa-eye" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="See details"></i>

              </li> -->
            <% if invoice.current_state == "pending" %>
              <li>
               <%= link_to client_invoices_path do %>
                <i class="fa fa-credit-card" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Pay the invoice"></i>
              <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
