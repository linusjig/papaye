<%= simple_form_for current_user.client,url: '/client'  do |f|%>

<%= f.error_notification %>

  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2"><h2>Your details</h2>
      <%= f.input :first_name, placeholder: "Bob" %>
      <%= f.input :last_name, placeholder:"Smith" %>
    </div>
    <div class="col-xs-12 col-md-8 col-md-offset-2"><h2>Company details</h2>
      <%= f.input :company, placeholder:"Joe's company" %>
      <%= f.input :address, placeholder:"36 Willesden Lane, London NW6 7ST, UK" %>
      <%= f.input :company_number, placeholder:"06488522" %>
    </div>
  </div>
  <div class="form-inputs">
    <div class="form-actions text-center">
      <%= f.button :submit, "Save", class: "btn btn-invoice" %>
    </div>
  </div>
<% end %>
