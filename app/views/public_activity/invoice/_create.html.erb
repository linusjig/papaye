<% label = "Invoice for company " + activity.parameters[:company] + " and client " + activity.parameters[:client_name] + " " + activity.parameters[:client_last_name] + " has been created " %>

<li>
 <i class="fa fa-file-text-o" aria-hidden="true" id="invoice-icon"></i>
<% if activity.trackable %>
<%= link_to label, invoice_path(activity.trackable) %>
<% else %>
<%= label %>
<% end %>
 <div class="timestamp pull-right"> <%= time_ago_in_words(activity.created_at)%> ago </div></li>
