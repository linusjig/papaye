<div id="welcomenavbar">

  <p id="powered-by"><%= t('shared.welcome-nav.powered') %></p>
  <div class="text-center">
    <% if current_user.nil? %>
    <h1><%= t('shared.welcome-nav.not-signed') %></h1>
    <% else %>
    <h1 id="dashboard-title"><%= t('dashboard') %></h1>
    <% end %>
  </div>
  <!-- Burger for mobile version -->
<button class="hidden-sm hidden-md hidden-lg burger" type="button" data-toggle="collapse" data-target="#collapsenavbar" aria-controls="collapsenavbar" aria-expanded="false" aria-label="Toggle navigation">
  <i class="fa fa-bars fa-2x"></i>

  </button>
<div class="burger-collapse">
  <div class="collapse navbar-toggleable-xs" id="collapsenavbar">
    <!-- normal collapsible navbar markup -->
    <br>
    <ul class="list-inline text-center">
      <% unless current_user.client %>
        <li><%= link_to t('btn-create-invoice'), new_invoice_path, class: "btn btn-invoice" %></li>
        <br>
        <li> <%= link_to t('dashboard'), dashboard_path, id: "navlink", class: current_link(dashboard_path) %></li>
        <li> <%= link_to t('settings'), edit_freelancer_path, id: "navlink", class: current_link(edit_freelancer_path) %></li>
        <li> <%= link_to t('profile'), freelancer_path, id: "navlink", class: current_link(freelancer_path) %></li>
        <li> <%= link_to t('logout'), destroy_user_session_path,  id: "navlink",method: :delete %></li>
        <hr>
      <% else %>
