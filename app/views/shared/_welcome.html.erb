        <li> <%= link_to t('settings'), edit_client_path, id: "navlink", class: current_link(edit_client_path) %></li>
        <li> <%= link_to t('profile'), client_path, id: "navlink", class: current_link(client_path) %></li>
        <li> <%= link_to t('logout'), destroy_user_session_path,  id: "navlink",method: :delete %></li>
