  <nav class="navbar-default navbar-fixed-side hidden-xs" id="sidebar">
    <!-- normal collapsible navbar markup -->
    <br>
    <ul class="list-unstyled">
      <h3 class="sidebar-title"><%= current_user.client.first_name %></h3>
       <% if user_signed_in? %>
